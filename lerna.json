{
  "lerna": "2.4.0",
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "version": {
      "conventionalCommits": true,
      "createRelease": "github"
    },
    "publish": {
      "conventionalCommits": true
    }
  },
  "changelog": {
    "labels": {
      "tag: breaking change": ":boom: Breaking Changes:",
      "tag: feature": ":sparkles: New Features:",
      "tag: enhancement": ":nail_care: Enhancements:",
      "tag: bug": ":bug: Bug Fixes:",
      "tag: chore": ":wrench: Chore:",
      "tag: documentation": ":memo: Documentations:",
      "tag: up(deps)": ":arrow_up: Dependencies:"
    },
    "cacheDir": ".changelog",
    "ignoreCommitters": ["renovate"],
    "nextVersion": "Unreleased"
  }
}
